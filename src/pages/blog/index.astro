---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Extract unique tags from all posts
const allTags = [...new Set(posts.flatMap(post => post.data.tags || []))].sort();
---

<!doctype html>
<html lang="tr">
	<head>
		<BaseHead title="Blog - Tüm Yazılar | Blogolog" description="Blogolog arşivindeki tüm yazılar. Güncel konular, pratik rehberler ve incelemeler." />
		<style>
			main {
				width: 960px;
			}
			
			.blog-header {
				text-align: center;
				margin-bottom: 2rem;
			}
			
			.blog-header h1 {
				margin: 0;
				font-size: 2.5rem;
				color: rgb(var(--black));
			}
			
			.blog-header p {
				margin: 0.5rem 0 0 0;
				color: rgb(var(--gray));
				font-size: 1.1rem;
			}
			
			.search-container {
				margin-bottom: 1.5rem;
			}
			
			#search-input {
				width: 100%;
				padding: 0.75rem 1rem;
				font-size: 1rem;
				border: 2px solid rgb(var(--gray-light));
				border-radius: 8px;
				transition: border-color 0.2s ease;
				font-family: inherit;
			}
			
			#search-input:focus {
				outline: none;
				border-color: rgb(var(--accent));
			}
			
			.tags-container {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin-bottom: 2rem;
			}
			
			.tag-chip {
				padding: 0.5rem 1rem;
				background: rgb(var(--gray-light));
				border: 2px solid transparent;
				border-radius: 20px;
				font-size: 0.9rem;
				cursor: pointer;
				transition: all 0.2s ease;
				font-family: inherit;
				color: rgb(var(--black));
			}
			
			.tag-chip:hover {
				background: rgb(var(--gray));
				color: white;
			}
			
			.tag-chip.active {
				background: rgb(var(--accent));
				color: white;
				border-color: rgb(var(--accent));
			}
			
			#no-results {
				text-align: center;
				color: rgb(var(--gray));
				font-size: 1.1rem;
				padding: 2rem;
			}
			
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h3,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				.blog-header h1 {
					font-size: 2rem;
				}
				
				.tags-container {
					justify-content: center;
				}
				
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="blog-header">
					<h1>Blog</h1>
					<p>Güncel konular, pratik ipuçları ve derinlemesine analizler.</p>
				</div>

				<div class="search-container">
					<input 
						type="text" 
						id="search-input" 
						placeholder="Yazılarda ara…" 
						aria-label="Yazılarda ara"
					/>
				</div>

				{allTags.length > 0 && (
					<div class="tags-container">
						{allTags.map((tag) => (
							<button class="tag-chip" data-tag={tag}>
								{tag}
							</button>
						))}
					</div>
				)}

				<section aria-labelledby="posts-heading">
					<h2 id="posts-heading" class="sr-only">Tüm Yazılar</h2>
					<ul id="posts-list">
						{
							posts.map((post) => (
								<li 
									data-title={post.data.title.toLowerCase()}
									data-description={(post.data.description || '').toLowerCase()}
									data-tags={(post.data.tags || []).join(',')}
								>
									<a href={`/blog/${post.id}/`}>
										{post.data.heroImage && (
											<Image width={720} height={360} src={post.data.heroImage} alt="" />
										)}
										<h3 class="title">{post.data.title}</h3>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
								</li>
							))
						}
					</ul>
				</section>

				<p id="no-results" style="display: none;">Sonuç bulunamadı.</p>
			</section>
		</main>
		<Footer />

		<script>
			const searchInput = document.getElementById('search-input') as HTMLInputElement;
			const postsList = document.getElementById('posts-list') as HTMLUListElement;
			const noResults = document.getElementById('no-results') as HTMLParagraphElement;
			const tagChips = document.querySelectorAll('.tag-chip');
			let selectedTag: string | null = null;

			function filterPosts() {
				const searchText = searchInput.value.toLowerCase();
				const posts = postsList.querySelectorAll('li');
				let visibleCount = 0;

				posts.forEach((post) => {
					const title = post.getAttribute('data-title') || '';
					const description = post.getAttribute('data-description') || '';
					const tags = post.getAttribute('data-tags') || '';
					
					// Check search match
					const matchesSearch = !searchText || 
						title.includes(searchText) || 
						description.includes(searchText) || 
						tags.includes(searchText);
					
					// Check tag filter
					const matchesTag = !selectedTag || tags.split(',').includes(selectedTag);
					
					// Show if matches both search and tag filter
					const shouldShow = matchesSearch && matchesTag;
					(post as HTMLElement).style.display = shouldShow ? '' : 'none';
					
					if (shouldShow) visibleCount++;
				});

				// Show/hide "no results" message
				noResults.style.display = visibleCount === 0 ? 'block' : 'none';
			}

			// Search input handler
			searchInput.addEventListener('input', filterPosts);

			// Tag chip click handlers
			tagChips.forEach((chip) => {
				chip.addEventListener('click', () => {
					const tag = chip.getAttribute('data-tag');
					
					// Toggle selection
					if (selectedTag === tag) {
						selectedTag = null;
						chip.classList.remove('active');
					} else {
						// Remove active from all chips
						tagChips.forEach(c => c.classList.remove('active'));
						// Set new selection
						selectedTag = tag;
						chip.classList.add('active');
					}
					
					filterPosts();
				});
			});
		</script>
	</body>
</html>
