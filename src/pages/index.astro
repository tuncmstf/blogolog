---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="tr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1rem;
				width: 100%;
				box-sizing: border-box;
			}

			.hero {
				text-align: center;
				margin-bottom: 4rem;
				padding: 2rem 0;
			}

			.hero h1 {
				font-size: 3rem;
				margin: 0 0 1rem 0;
				color: rgb(var(--black));
			}

			.subtitle {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				margin: 0;
			}

			.recent-posts {
				margin-bottom: 3rem;
			}

			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 2rem;
			}

			.section-header h2 {
				font-size: 1.75rem;
				margin: 0;
				color: rgb(var(--black));
			}

			.view-all {
				color: rgb(var(--accent));
				text-decoration: none;
				font-size: 0.95rem;
				transition: opacity 0.2s ease;
			}

			.view-all:hover {
				opacity: 0.8;
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}

			.posts-grid li {
				background: white;
				border-radius: 12px;
				overflow: hidden;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			.posts-grid li:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow);
			}

			.posts-grid li:first-child {
				grid-column: 1 / -1;
			}

			.posts-grid a {
				display: block;
				text-decoration: none;
				color: inherit;
			}

			.post-image {
				width: 100%;
				height: auto;
				display: block;
				border-radius: 12px 12px 0 0;
			}

			.post-content {
				padding: 1.25rem;
			}

			.post-title {
				font-size: 1.25rem;
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.3;
			}

			.post-date {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin: 0 0 0.75rem 0;
			}

			.post-description {
				font-size: 0.95rem;
				color: rgb(var(--gray-dark));
				margin: 0;
				line-height: 1.5;
			}

			.posts-grid a:hover .post-title {
				color: rgb(var(--accent));
			}

			.empty-state {
				color: rgb(var(--gray));
				font-style: italic;
				text-align: center;
				padding: 3rem 1rem;
			}

			@media (max-width: 720px) {
				.hero h1 {
					font-size: 2.25rem;
				}

				.subtitle {
					font-size: 1.1rem;
				}

				.section-header {
					flex-direction: column;
					align-items: flex-start;
					gap: 0.5rem;
				}

				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<h1>Blogolog</h1>
				<p class="subtitle">{SITE_DESCRIPTION}</p>
			</div>

			<section class="recent-posts">
				<div class="section-header">
					<h2>Son yazılar</h2>
					<a href="/blog" class="view-all">Tüm yazılara git →</a>
				</div>
				
				{posts.length > 0 ? (
					<ul class="posts-grid">
						{posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image 
											width={720} 
											height={360} 
											src={post.data.heroImage} 
											alt={post.data.title}
											class="post-image"
										/>
									)}
									<div class="post-content">
										<h3 class="post-title">{post.data.title}</h3>
										<p class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										{post.data.description && (
											<p class="post-description">{post.data.description}</p>
										)}
									</div>
								</a>
							</li>
						))}
					</ul>
				) : (
					<p class="empty-state">Henüz yayınlanmış yazı yok. İlk yazı yakında.</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
